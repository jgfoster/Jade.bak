!Integer methodsFor!

asHex

	| string |
	string := self printStringRadix: 16.
	string := string copyFrom: 4 to: string size.
	string := ('0x00000' copyFrom: 1 to: (7 - string size max: 2)) , string.
	^string.
!

factorsOf: n

	self = 0 ifTrue: [^SmallInteger maximum].
	self \\ n = 0 ifFalse: [^0].
	^((self / n) factorsOf: n) + 1.
!

trimBlanks! !
